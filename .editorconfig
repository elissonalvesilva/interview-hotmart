# top-most EditorConfig file
root = true

# Unix-style newlines
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = spaces
indent_size = 2

# even though a line length was set, it must be
# used according to each project
[*.js|jsx]
indent_size = 2
max_line_length = 80
